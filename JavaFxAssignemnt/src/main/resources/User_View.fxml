<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<GridPane style="-fx-background-color: lightgrey" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="com.example.javafxassignemnt.Controller.UserFx">
  <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
  <columnConstraints>
    <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
    </ColumnConstraints>
    <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0">
    </ColumnConstraints>
    <ColumnConstraints />
    <ColumnConstraints />
  </columnConstraints>

  <Label text="User Form (FXML)" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
    <font>
      <Font name="Arial" size="24" />
    </font>
    <GridPane.margin>
      <Insets bottom="20" left="0" right="0" top="20" />
    </GridPane.margin>
  </Label>

  <Label text="Name : " GridPane.columnIndex="0" GridPane.rowIndex="1">
  </Label>
  <!-- Add Name Text Field -->
  <TextField fx:id="nameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />

  <Label text="Email : " GridPane.columnIndex="0" GridPane.rowIndex="2">
  </Label>
  <!-- Add Name Text Field -->
  <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />

  <Label text="Password :" GridPane.columnIndex="0" GridPane.rowIndex="3">
  </Label>
  <!-- Add Name Text Field -->
  <TextField fx:id="passField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />

  <Label text="Phone :" GridPane.columnIndex="0" GridPane.rowIndex="4">
  </Label>
  <!-- Add Name Text Field -->
  <TextField fx:id="phoneField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />

  <Label text="DOB :" GridPane.columnIndex="0" GridPane.rowIndex="5">
  </Label>
  <!-- Add Name Text Field -->
  <DatePicker fx:id="dobField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="5" />

  <Button fx:id="submitButton" onAction="#register" defaultButton="true" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.rowSpan="1">
    <GridPane.margin>
      <Insets bottom="20" left="0" right="0" top="20" />
    </GridPane.margin>
  </Button>
  <Button fx:id="cancelButton" onAction="#cancel" defaultButton="true"  prefHeight="40" prefWidth="100" text="Cancel" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.rowSpan="1">
    <GridPane.margin>
      <Insets bottom="20" left="0" right="0" top="20" />
    </GridPane.margin>
  </Button>

  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
</GridPane>
