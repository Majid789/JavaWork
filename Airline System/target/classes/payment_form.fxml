<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="com.airline.controller.PaymentFX">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0">
        </ColumnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Payment Form (FXML)" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>



    <!-- Add Name Label -->
    <Label text="Payment Method : " GridPane.columnIndex="0" GridPane.rowIndex="1">
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="paymentMethodField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />


    <!-- Add Email Label -->
    <Label text="Credit Card No : " GridPane.columnIndex="0" GridPane.rowIndex="2">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="creditCardNoField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />


    <!-- Add Expiry Date -->
    <Label text="Expiry Date : " GridPane.columnIndex="0" GridPane.rowIndex="3">
    </Label>
    <!-- Add Email Text Field -->
    <DatePicker fx:id="expiryDateField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <!-- Add Submit Button -->
    <Button fx:id="submitButton" defaultButton="true" onAction="#register" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
    <Button fx:id="cancelButton" defaultButton="true" onAction="#cancel" prefHeight="40" prefWidth="100" text="Cancel" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
