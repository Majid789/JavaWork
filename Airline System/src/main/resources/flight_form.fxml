<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="555.0" prefWidth="458.0" vgap="10" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.airline.controller.FlightFX">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0">
        </ColumnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Flight Form (FXML)" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>

    <!-- Select Plane -->
    <Label text="Plane : " GridPane.columnIndex="0" GridPane.rowIndex="1">
    </Label>
    <!-- Add Name Text Field -->
    <ComboBox fx:id="planeField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />


    <!-- Add Name Label -->
    <Label text="Departure Time : " GridPane.columnIndex="0" GridPane.rowIndex="2">
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="departureField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />


    <!-- Add Email Label -->
    <Label text="Arrival Time : " GridPane.columnIndex="0" GridPane.rowIndex="3">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="arrivalField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label prefHeight="40" text="Economy Adult : " GridPane.columnIndex="0" GridPane.rowIndex="4">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="economyAdultField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label prefHeight="40" text="Business Adult : " GridPane.columnIndex="0" GridPane.rowIndex="5">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="BusinessAdultField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label prefHeight="40" text="Economy Child : " GridPane.columnIndex="0" GridPane.rowIndex="6">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="economyChildField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label prefHeight="40" text="Business Child : " GridPane.columnIndex="0" GridPane.rowIndex="7">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="BusinessChildField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="7" />
   <Label GridPane.rowIndex="7" />

   <!-- <Label prefHeight="40" text="Plane Id : " GridPane.columnIndex="0" GridPane.rowIndex="7">
    </Label>
    &lt;!&ndash; Add Email Text Field &ndash;&gt;
    <TextField fx:id="planeIdField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <Label GridPane.rowIndex="7" />-->


    <Label text="Departure Date : " GridPane.columnIndex="0" GridPane.rowIndex="8">
    </Label>
    <DatePicker fx:id="departureDateField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="8" />



